<GroupFilter>:
    name: 'groupfilter'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (None, None)
        size: root.width * 0.8, root.height * 0.8
        pos: root.width * 0.1, root.height * 0.1
        spacing: self.height * 0.05
        Label:
            text: 'Genre'
        Spinner:
            id: genreSpinner
            text: 'FPS'
            values: ['FPS','Action','RPG','Strategy']
        Label:
            text: 'Game'
        TextInput:
            id: gameInput
            text: 'Game'
            multiline: False
        Label:
            text: 'Console'
        Spinner:
            id: consoleSpinner
            text: 'PC'
            values: ['PC', 'Xbox 360', 'PS4', 'Wii']
        Label:
            text: 'Type'
        Spinner:
            id: typeSpinner
            text: 'Competitive'
            values: ['Competitive','Casual']
        Button:
            text: 'Go Back'
            on_release: app.root.current = 'browsegroups'
        Button:
            text: 'Apply'
            # on_release: app.root.current = 'browsegroups'
            on_release: root.applyQuery()

<GroupFilterDisplay>
    name: 'groupfilterdisplay'
    BoxLayout:
        id: myLayout
        orientation: 'vertical'
        size_hint: (None, None)
        size: root.width * 0.8, root.height * 0.8
        pos: root.width * 0.1, root.height * 0.1
        spacing: self.height * 0.05
        Button:
            text: 'Back'
            size_hint_y: 0.1
            on_release: app.root.current = 'groupfilter'


<BrowseGroups>:
    name: 'browsegroups'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (None, None)
        size: root.width * 0.8, root.height * 0.8
        pos: root.width * 0.1, root.height * 0.1
        spacing: self.height * 0.05
        Button:
            text: 'View All'
            on_release: root.viewAll()
        BoxLayout:
            TextInput:
                size_hint_x: 0.8
                text: 'Search'
                multiline: False
            Button:
                size_hint_x: 0.2
                text: 'Search'
        Button:
            text: 'Filter'
            on_release: app.root.current = 'groupfilter'
        Button:
            text: 'Go Back'
            on_release: app.root.current = 'groupscreen'


<CreateGroup>:
    name: 'creategroup'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (None, None)
        size: root.width * 0.8, root.height * 0.8
        pos: root.width * 0.1, root.height * 0.1
        spacing: self.height * 0.025
        Label:
            text: 'Group Name'
        TextInput:
            id: nameInput
            text: 'Group Name'
            multiline: False
        Label:
            text: 'Game Name'
        TextInput:
            id: gameInput
            text: 'Game Name'
            multiline: False
        Label:
            text: 'Description'
        TextInput:
            id: descriptionInput
            text: 'Description'
            multiline: True
        Label:
            text: 'Console'
        Spinner:
            id: consoleSpinner
            text: 'PC'
            values: ['PC', 'Xbox 360', 'PS4', 'Wii']
        Label:
            text: 'Type'
        Spinner:
            id: typeSpinner
            text: 'Competitive'
            values: ['Competitive', 'Casual']
        BoxLayout:
            Button:
                text: 'Submit'
                #on_release: app.root.current = 'groupscreen'
                on_release: root.submitGroup()
            Button:
                text: 'Go Back'
                on_release: app.root.current = 'groupscreen'


<GroupButton>:
    #on_press: app.root.ids.myGroups.displayGroup()
    on_press: app.root.children[0].displayGroup(self)

<BackButton>:
    on_release: app.root.current = 'mygroups'


