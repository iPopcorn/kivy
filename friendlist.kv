<FriendBackButton>:
    on_release: app.root.current = 'friendscreen'

<FriendInfoScreen>:
    name: 'friendinfoscreen'
    BoxLayout:
        id: myLayout
        orientation: 'vertical'
        size_hint: (0.8,0.8)
        pos: root.width * 0.1, root.height * 0.1
        spacing: self.height * 0.05
        GridLayout:
            id: myGridLayout
            cols: 2
            spacing: self.height * 0.02

<RootWidget>:
    FriendScreen:

<ListItemButton>:
    #on_release: print(app.root)

<GroupInviteButton>:
    # on_release: print("GroupInviteButton Works!!")
