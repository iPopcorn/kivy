<SendMsgButton>:
    # on_release: print("SendMsgButton Works!!")
    on_release: self.sendMessage()

<FriendItemButton>:
    # on_release: print("FriendItemButton works and I dont have to subclass ListItemButton twice!")
    on_release: self.displayFriendInfo()

