#:include partyforms.kv
#:include groupforms.kv
#:include friendlist.kv
#:include profileforms.kv

<MainScreen>:
    name: 'mainscreen'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        size_hint_y: None
        height: root.height * 0.9
        width: root.width * 0.5
        pos: root.center_x - (self.width * 0.5), root.height * 0.05
        spacing: 50
        Button:
            id: playNowButton
            text: 'Play Now'
            on_release: app.root.current = 'playnowscreen'
        Button:
            id: groupsButton
            text: 'Groups'
            on_release: app.root.current = 'groupscreen'
        Button:
            id: friendButton
            text: 'Friends'
            on_release: app.root.current = 'friendscreen'
        Button:
            id: profileButton
            text: 'Profile'
            on_release: app.root.current = 'profilescreen'
        Button: #todo: make logout change current user
            id: logoutButton
            text: 'Logout'
            on_release: app.root.current = 'homescreen'; app.root.curUser = 0

<GroupScreen>:
    name: 'groupscreen'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (None, None)
        size: root.width * 0.8, root.height * 0.8
        pos: root.width * 0.1, root.height * 0.1
        spacing: self.height * 0.05
        Button:
            text: 'My Groups'
            on_release: app.root.current = 'mygroups'
        Button:
            text: 'Create Group'
            on_release: app.root.current = 'creategroup'
        Button:
            text: 'Browse Groups'
            on_release: app.root.current = 'browsegroups'
        Button:
            text: 'Main Menu'
            on_release: app.root.current = 'mainscreen'

