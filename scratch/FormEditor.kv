<BaseScreen>:
    BoxLayout:
        id: myLayout
        orientation: 'vertical'
        size_hint: (0.8,0.8)
        pos: root.width * 0.1, root.height * 0.1
        spacing: self.height * 0.05
        Button:
            text: 'Go To Party List'
            on_release: root.openPartyList()

<BackToJoinPartyFormButton>:
    #on_release: app.root.current = 'joinpartyform'
    on_release: print('BackToJoinPartyFormButton pressed')

<PartyList>:
    BoxLayout:
        id: myLayout
        orientation: 'vertical'
        size_hint: (0.8,0.8)
        pos: root.width * 0.1, root.height * 0.1
        spacing: self.height * 0.05

#party button displays game name
