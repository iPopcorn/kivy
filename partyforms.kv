<PartyListBackButton>:
    on_release: app.root.current = 'joinpartyform'

<PartyList>:
    BoxLayout:
        id: myLayout
        orientation: 'vertical'
        size_hint: (0.8,0.8)
        pos: root.width * 0.1, root.height * 0.1
        spacing: self.height * 0.05

#party button displays game name
<PartyButton>:
    on_release: self.myCallback()

<InitialForm>:
    name: 'initialform'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (None, None)
        width: self.parent.width * 0.8
        height: self.parent.height * 0.8
        pos: self.parent.width * 0.1, self.parent.height * 0.1
        padding: self.width * 0.1
        spacing: self.width * 0.1
        canvas:
            Color:
                rgba: 1,0,0,0.5
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            id: joinPartyButton
            text: 'Join Party'
            on_release: app.root.current = 'joinpartyform'
        Button:
            id: startPartyButton
            text: 'Start Party'
            on_release: app.root.current = 'startpartyform'
        MainMenuButton:


<StartPartyForm>:
    name: 'startpartyform'
    #size_hint: (None,None)
    #height: self.parent.height
    #width: self.parent.width
    canvas:
        Color:
            rgba: 0,0.8,1,0.5
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: myLayout
        orientation: 'vertical'
        size_hint: (None,None)
        height: root.height * 0.8
        width: root.width * 0.8
        spacing: self.height * 0.05
        pos: root.width * 0.1, root.height * 0.1
        #size_hint_x: None
        #size_hint_y: None
        #canvas:
        #    Color:
        #        rgba: 1,0.8,0,0.5
        #    Rectangle:
        #        pos: self.pos
        #        size: self.size
        Label:
            text: 'Enter Game Name'
        TextInput:
            id: gameInput
            multiline: False
            text: 'Game'
        Label:
            text: 'Select Console'
        Spinner:
            id: consoleSpinner
            text: 'PC'
            values: ['PC', 'Xbox 360', 'PS4', 'Wii']
        Label:
            text: 'Select Party Type'
        Spinner:
            id: typeSpinner
            text: 'Competitive'
            values: ['Competitive', 'Casual']
        BoxLayout:
            canvas:
                Color:
                    rgba: 1,0,0,0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: 'Go Back'
                #on_release: root.displayInitialForm()
                on_release: app.root.current = 'initialform'
            Button:
                text: 'Submit!'
                on_release: root.submitForm()
                #on_release: app.root.current = 'initialform'

