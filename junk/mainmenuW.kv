<MainMenuManager>:
    orientation: 'vertical'
    MainScreen:
    ProfileScreen:
    FriendScreen:
    GroupScreen:
    PlayNowScreen:

<MainScreen>:
    name: 'mainscreen'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        size_hint_y: None
        height: root.height * 0.9
        width: root.width * 0.5
        pos: root.center_x - (self.width * 0.5), root.height * 0.05
        canvas:
            Color:
                rgba: 1,0,0,0.4
            Rectangle:
                pos: self.pos
                size: self.size
        spacing: 50
        Button:
            id: playNowButton
            text: 'Play Now'
            on_release: app.root.current = 'playnowscreen'
        Button:
            id: groupsButton
            text: 'Groups'
            on_release: app.root.current = 'groupscreen'
        Button:
            id: friendButton
            text: 'Friends'
            on_release: app.root.current = 'friendscreen'
        Button:
            id: profileButton
            text: 'Profile'
            on_release: app.root.current = 'profilescreen'

<ProfileScreen>:
    name: 'profilescreen'
    BoxLayout:
        canvas:
            Color:
                rgba: 1,0,0,0.4
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: 'main'
            on_release: app.root.current = 'mainscreen'

<FriendScreen>:
    name: 'friendscreen'
    BoxLayout:
        canvas:
            Color:
                rgba: 0,1,0,0.4
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: 'main'
            on_release: app.root.current = 'mainscreen'

<GroupScreen>:
    name: 'groupscreen'
    BoxLayout:
        canvas:
            Color:
                rgba: 0,0,1,0.4
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: 'main'
            on_release: app.root.current = 'mainscreen'

<PlayNowScreen>:
    name: 'playnowscreen'
    BoxLayout:
        canvas:
            Color:
                rgba: 1,0,0.5,0.4
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: 'main'
            on_release: app.root.current = 'mainscreen'
